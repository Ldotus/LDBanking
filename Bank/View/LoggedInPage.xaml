<Page x:Class="Bank.LoggedInPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Bank"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoggedInPage">
  
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="100" Width="300"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel>
                <TextBlock  FontSize="16" Padding="0 0 0 30" Background="Aquamarine">Transactions:</TextBlock >
                <ListView x:Name="TransactionList" Height="100" ></ListView>
            </StackPanel>
            <StackPanel Grid.Column="1">
                <TextBlock Background="LawnGreen" FontFamily="Arial" > Commitments:</TextBlock>
                <TextBlock x:Name="expendeture" Padding="0 20 0 0" Background="Lavender">Expendeture:</TextBlock>
            </StackPanel>

        </Grid>
    

</Page>
